<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/user"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/textReceiveMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_oval="true"/>
    <TextView
        android:id="@+id/textReceiveMessage"
        app:layout_constraintWidth_max="wrap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_receiver_message"
        android:padding="12dp"
        android:textColor="@color/black"
        android:layout_marginLeft="2dp"
        app:layout_constraintStart_toEndOf="@id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"/>

    <TextView
        android:id="@+id/textDatetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textReceiveMessage"
        />


</androidx.constraintlayout.widget.ConstraintLayout>